<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BigTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">36sp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:layout_marginStart">@dimen/mh_default</item>
        <item name="android:layout_marginEnd">@dimen/mh_default</item>
        <item name="android:color">@color/black</item>
    </style>

    <style name="Input" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/input</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:elevation">10dp</item>
<!--        <item name="android:layout_marginStart">@dimen/mh_default</item>-->
<!--        <item name="android:layout_marginEnd">@dimen/mh_default</item>-->

    </style>

    <style name="InputContainer" parent="CardView">
        <item name="cardCornerRadius">100dp</item>
        <item name="cardElevation">5dp</item>
    </style>

</resources>